unit BackGround;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants,
  System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.Imaging.pngimage, Vcl.ExtCtrls;

type
  TBackGroundForm = class(TForm)
    BackGroundImage: TImage;
    StartTimer: TTimer;
    procedure StartTimerTimer(Sender: TObject);
    procedure FormShow(Sender: TObject);
    procedure FormDestroy(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  BackGroundForm: TBackGroundForm;

  iPercentage: integer;

implementation

{$R *.dfm}

uses mainscreen, SelectDifficult;

procedure ReSizeResolution(oForm: TForm);
begin
  if Screen.Width > MinimizeWinWight then
  begin
    iPercentage := Round(((Screen.Width - MinimizeWinWight) / MinimizeWinWight)
      * 100) + 100;
    oForm.ScaleBy(iPercentage, 100);
  end;
end;

procedure TBackGroundForm.FormDestroy(Sender: TObject);
begin

  RemoveFontResourceEx('Assets\Fonts\Gnomoria.ttf', FR_PRIVATE, 0);
end;

procedure TBackGroundForm.FormShow(Sender: TObject);
begin
  StartTimer.Enabled := true;
end;

procedure InitForm(oForm: TForm);
begin
  ReSizeResolution(oForm);
  oForm.Font.Name := 'Gnomoria_rus';
end;

procedure TBackGroundForm.StartTimerTimer(Sender: TObject);
begin
  AddFontResourceEx('Assets\Fonts\Gnomoria.ttf', FR_PRIVATE, 0);


  InitForm(MainForm);
  InitForm(SelectDifficultForm);


  MainForm.Show;
  StartTimer.Enabled := false;
end;

end.
