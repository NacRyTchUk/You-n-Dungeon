unit TFieldClass;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants,
  System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.Imaging.pngimage, Vcl.ExtCtrls,
  TCardClass, nicestuff;

// 14    110x145
// 145  606
// 41   463


type
  TField = class
  private
    Size: TPosition;
    PlayerCard: TPosition;
    FieldOfCards: array[0..FIELD_SIZE_X-1,0..FIELD_SIZE_Y-1] of TCard;

  public
    function GetFieldSize(): TPosition;

    Constructor Create();
    // Destructor  Destroy;
  end;

implementation
function TField.GetFieldSize;
begin
  GetFieldSize := Size;
end;

Constructor TField.Create();
var i,j : integer;
begin

  for i := 0 to FIELD_SIZE_X - 1 do
    for j := 0 to FIELD_SIZE_Y - 1 do
    begin
     FieldOfCards[i, j] := TCard.Create(CTP(i,j));
    end;

end;





end.
