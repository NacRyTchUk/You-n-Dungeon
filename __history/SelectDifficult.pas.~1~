unit SelectDifficult;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.Imaging.pngimage, Vcl.ExtCtrls;

type
  TSelectDifficultForm = class(TForm)
    BackGroundImage: TImage;
    BackBtnImage: TImage;
    procedure BackBtnImageClick(Sender: TObject);
    procedure FormShow(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  SelectDifficultForm: TSelectDifficultForm;

implementation

{$R *.dfm}

uses MainScreen;


procedure TSelectDifficultForm.BackBtnImageClick(Sender: TObject);
begin

  MainForm.Show();
  SelectDifficultForm.Hide;

  SelectDifficultForm.Close;
end;

procedure ReSizeResolution(oForm:TForm);
begin
  if Screen.Width > oForm.Width then
  begin
    iPercentage:=Round(((Screen.Width-MinimizeWinWight)/MinimizeWinWight)*100)+100;
    oForm.ScaleBy(iPercentage + 1,100);
  end;
end;


procedure TSelectDifficultForm.FormShow(Sender: TObject);
begin

ReSizeResolution(Self);
end;

end.
